        </ListView>
        <ListView ItemsSource="{Binding Source={StaticResource TransactionViews}}" Margin="674,30,350,0">
            <ListView.ItemTemplate>
                <DataTemplate                               >
                    <TextBlock x:ConnectionId='5'                                     Margin="10,0,0,0"/>
