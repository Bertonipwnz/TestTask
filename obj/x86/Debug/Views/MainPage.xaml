<Page
    x:Class="TestTaskUWP.Views.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:TestTaskUWP.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <ListView x:ConnectionId='2' Name="Guestbook">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Type_Transaction}" />
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <TextBox x:ConnectionId='3' Name="txtNewPost"></TextBox>
        <Button x:ConnectionId='4'                        >Добавить сообщение</Button>
    </Grid>
</Page>

